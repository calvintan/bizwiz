<section class="result">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="dropdown">
          <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Share via QR code
          </button>
          <div class="dropdown-menu p-4" aria-labelledby="dropdownMenuButton">
            <table class="qrcode">
             <% @qr.modules.each_index do |x| -%>
               <tr>
               <% @qr.modules.each_index do |y| -%>
                <% if @qr.dark?(x,y) -%>
                  <td class="black"/>
                <% else -%>
                  <td class="white"/>
                <% end -%>
               <% end -%>
               </tr>
             <% end -%>
            </table>
          </div>
        </div>
        <div id="canvas" class="rounded shadow-sm">
          <% if @graph.category.include?('bar') %>
          <%= bar_chart @data_array, title: @graph.name, xtitle: @graph.x_axis_title, ytitle: @graph.y_axis_title, thousands: ",", prefix: "$" %>
          <% elsif @graph.category.include?('line') %>
          <%= area_chart @data_array, title: @graph.name, xtitle: @graph.x_axis_title, ytitle: @graph.y_axis_title, thousands: ",", prefix: "$"   %>
          <% elsif @graph.category.include?('pie') %>
          <%= pie_chart @pie_array, title: @graph.name, xtitle: @graph.x_axis_title, ytitle: @graph.y_axis_title, donut: false, legend: "bottom", label: "Value", suffix: "%" %>
          <% elsif @graph.category.include?('geo') %>
          <%= geo_chart @data_array, title: @graph.name, xtitle: @graph.x_axis_title, ytitle: @graph.y_axis_title %>
          <% end %>
        </div>

        <div class="result-btns">
          <%= link_to "Edit chart", graph_datatables_path(@graph), class: "btn btn-outline-primary" %>
          <%= link_to "Make a new chart", graph_path(@graph), method: :DELETE, class: "btn btn-outline-primary", data:{ confirm: "Your current chart and data will be deleted.\n\nAre you sure?"} %>
          <button id="save-btn" class="btn btn-primary">Download chart as an image</button>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  var canvas = document.querySelector("#canvas canvas");
  var button = document.getElementById("save-btn");
  button.addEventListener('click', function(){
    canvas.toBlob(function(blob) {
      saveAs(blob, "chart.png");
    })
  });
  // console.log('canvas', canvas);
  // console.log('button', button);
</script>
