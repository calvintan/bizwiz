    <%= javascript_include_tag 'application' %>

    <script src="https://cdn.jsdelivr.net/gh/gitbrent/pptxgenjs@2.5.0/dist/pptxgen.bundle.js"></script>
  </head>
  <body>
    <%= render 'navigation' %>
    <main>
      <%= yield %>
    </main>
    <%= render 'footer' %>
  </body>
</html>
