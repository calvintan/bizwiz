<h1>This is index page for datatable</h1>

<% @datatables.each do |e| %>
<p><%= e.key %>: <%= e.value %></p>
<% end %>
<%= @datatables.count %>

<button onclick="makeChart(event, 'pie')" class = "tablinks">Pie chart</button>
